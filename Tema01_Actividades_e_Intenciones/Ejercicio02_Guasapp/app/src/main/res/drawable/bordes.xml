<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2b412d3f" />
            <gradient android:angle="-90" android:startColor="#2b412d3f" android:endColor="#2b412d3f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#2b412d3f" />
            <solid android:color="#2b412d3f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="4dip" android:color="#2b412d3f" />
            <gradient android:angle="180" android:startColor="#2b412d3f" android:endColor="#2b412d3f" />
        </shape>
    </item>
</selector>