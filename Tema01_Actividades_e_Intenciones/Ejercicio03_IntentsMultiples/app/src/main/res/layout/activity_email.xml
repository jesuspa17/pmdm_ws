<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.salesianostriana.di.intentsmultiples.EmailActivity"
    android:id="@+id/email">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PARA: "
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#020202"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editDireccion"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/editTexto"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ASUNTO:"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/editAsunto"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#010101" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editAsunto"
        android:layout_below="@+id/editDireccion"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Texto"
        android:id="@+id/textView8"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#010101"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTexto"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editAsunto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_enviar"
        android:layout_below="@+id/editTexto"
        android:textSize="20dp"
        android:background="@drawable/message"
        android:layout_alignEnd="@+id/editTexto" />
</RelativeLayout>
