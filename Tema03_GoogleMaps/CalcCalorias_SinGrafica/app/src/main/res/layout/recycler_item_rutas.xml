<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(25/15/15)"
        android:id="@+id/textViewFechaRuta"
        android:gravity="center"
        android:textSize="10dp"
        android:layout_alignTop="@+id/textViewDiaSemana"
        android:layout_toEndOf="@+id/textViewDiaSemana"
        android:layout_alignBottom="@+id/textViewDiaSemana"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8 km"
        android:id="@+id/textViewDistanciaAd"
        android:layout_marginLeft="35dp"
        android:gravity="right"
        android:textSize="15dp"
        android:layout_below="@+id/textViewFechaRuta"
        android:layout_alignEnd="@+id/textViewCaloriasAd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="534543 kcal"
        android:id="@+id/textViewCaloriasAd"
        android:gravity="right"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Domingo"
        android:id="@+id/textViewDiaSemana"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PÃ©rdida (KCal): "
        android:id="@+id/textView4"
        android:textSize="14dp"
        android:layout_above="@+id/textViewDistanciaAd"
        android:textColor="#BE1621"
        android:layout_toEndOf="@+id/textViewFechaRuta"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Distancia (KM): "
        android:id="@+id/textView8"
        android:textSize="14dp"
        android:layout_alignTop="@+id/textViewDistanciaAd"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#3F51B5"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:src="@drawable/tiempo"
        android:layout_marginTop="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00h:00m:00s"
        android:id="@+id/textViewDuracion"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:textSize="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"/>


</RelativeLayout>