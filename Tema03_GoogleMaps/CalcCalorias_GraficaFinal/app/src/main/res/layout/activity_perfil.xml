<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dam.salesianostriana.calccalorias.PerfilActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNombreEditar"
        android:textAlignment="center"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/editTextPesoEditar"
        android:layout_alignEnd="@+id/editTextPesoEditar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Peso (kg)"
        android:id="@+id/textView12"
        android:layout_below="@+id/editTextNombreEditar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextPesoEditar"
        android:textAlignment="center"
        android:layout_below="@+id/textView12"
        android:layout_alignEnd="@+id/editTextUsuarioEditar"
        android:layout_alignStart="@+id/editTextUsuarioEditar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsuarioEditar"
        android:textAlignment="center"
        android:layout_below="@+id/editTextPesoEditar"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/editTextPassEditar"
        android:layout_alignStart="@+id/editTextPassEditar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/textView13"
        android:layout_below="@+id/editTextPesoEditar"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/textView14"
        android:layout_below="@+id/editTextUsuarioEditar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassEditar"
        android:textAlignment="center"
        android:layout_below="@+id/textView14"
        android:layout_alignEnd="@+id/button_guardarCambios"
        android:layout_alignStart="@+id/button_guardarCambios" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Guardar cambios"
        android:id="@+id/button_guardarCambios"
        android:padding="5dp"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/editTextPassEditar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Si necesita modificar algún campo, hágalo y pulse sobre el botón 'Guardar cambios'"
        android:id="@+id/textView15"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
